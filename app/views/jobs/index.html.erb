<h1>Listing jobs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Pay</th>
    <th>Description</th>
    <th>Employee requirements</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @jobs.each do |job| %>
  <tr>
    <td><%= job.name %></td>
    <td><%= job.date %></td>
    <td><%= job.pay %></td>
    <td><%= job.description %></td>
    <td><%= job.employee_requirements %></td>
    <td><%= link_to 'Show', job %></td>
    <td><%= link_to 'Edit', edit_job_path(job) %></td>
    <td><%= link_to 'Destroy', job, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

